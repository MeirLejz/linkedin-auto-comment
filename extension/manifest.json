{
    "manifest_version": 3,
    "name": "LinkedIn Comment Assistant",
    "version": "2.0",
    "description": "Generate and pre-fill LinkedIn comments using ChatGPT",
    "permissions": ["identity", "storage", "scripting"],
    "oauth2": {
      "client_id": "715880668270-71umu0af9d97l9171f8kiimr2as3qcrr.apps.googleusercontent.com",
      "scopes": ["openid", "email", "profile"]
    },
    "background": {
      "service_worker": "dist/background.bundle.js"
    },
    "action": {
      "default_popup": "public/popup.html",
      "default_icon": "public/icon.png"
    },
    "icons": {
      "16": "public/icon.png",
      "48": "public/icon.png",
      "128": "public/icon.png"
    },
    "content_scripts": [
      {
        "css": ["public/styles.css"],
        "matches": ["*://*.linkedin.com/*"],
        "js": ["src/contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["public/button.png"],
        "matches": ["*://*.linkedin.com/*"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
  }
}